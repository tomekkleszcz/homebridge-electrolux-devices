{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["es2015", "es2016", "es2017", "es2018", "es2021"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "paths": {
            "homebridge": ["./node_modules/homebridge/dist/index.d.ts"]
        }
    },
    "include": ["src/", "eslint.config.js"],
    "exclude": ["**/*.spec.ts"]
}
