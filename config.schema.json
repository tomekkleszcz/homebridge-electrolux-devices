{
    "pluginAlias": "HomebridgeElectroluxDevices",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "email": {
                "title": "Email address",
                "type": "string",
                "required": true,
                "default": ""
            },
            "password": {
                "title": "Password",
                "type": "string",
                "required": true,
                "default": ""
            },
            "region": {
                "title": "Region",
                "type": "string",
                "required": true,
                "default": "eu",
                "oneOf": [
                    {
                        "title": "Europe",
                        "enum": [
                            "eu"
                        ]
                    },
                    {
                        "title": "United States",
                        "enum": [
                            "us"
                        ]
                    },
                    {
                        "title": "Australia",
                        "enum": [
                            "au"
                        ]
                    },
                    {
                        "title": "Russia",
                        "enum": [
                            "ru"
                        ]
                    },
                    {
                        "title": "China",
                        "enum": [
                            "cn"
                        ]
                    },
                    {
                        "title": "Israel",
                        "enum": [
                            "il"
                        ]
                    }
                ]
            },
            "pollingInterval": {
                "title": "Polling interval",
                "type": "number",
                "required": false,
                "default": "30"
            },
            "carbonDioxideSensorAlarmValue": {
                "title": "Carbon dioxide sensor alarm value",
                "type": "number",
                "required": false,
                "default": "1000"
            }
        }
    }
}
